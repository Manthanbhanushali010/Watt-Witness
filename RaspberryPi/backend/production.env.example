# WattWitness Production Environment Variables
# Copy this file to .env and update with your production values

# Database Configuration
DATABASE_URL=postgresql://username:password@host:port/wattwitness_production

# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME=WattWitness
SECRET_KEY=your-super-secret-production-key-here-change-this
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# CORS Configuration
FRONTEND_URL=https://wattwitness-frontend.vercel.app
ALLOWED_ORIGINS=https://wattwitness-frontend.vercel.app,https://wattwitness-backend.railway.app

# Blockchain Configuration
CHAIN_RPC_URL=https://avalanche-fuji-c-chain-rpc.publicnode.com
CONTRACT_ADDRESS=0xB3ee80a2B09727545939a059b24611Ee0dA32938

# Production Settings
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=info

# Database Pool Configuration
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=200

# Monitoring
SENTRY_DSN=your-sentry-dsn-here
ENABLE_METRICS=true
METRICS_PORT=9090

# Security
HTTPS_ONLY=true
SECURE_COOKIES=true
CSRF_PROTECTION=true 