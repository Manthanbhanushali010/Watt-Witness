# WattWitness Frontend Production Environment Variables
# Copy this file to .env.production and update with your production values

# API Configuration
VITE_API_URL=https://wattwitness-backend.railway.app

# App Configuration
VITE_APP_NAME=WattWitness
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Trust-minimized electricity meter using blockchain technology

# Production Settings
VITE_ENVIRONMENT=production
VITE_DEBUG=false

# Analytics & Monitoring
VITE_ENABLE_ANALYTICS=true
VITE_GOOGLE_ANALYTICS_ID=your-ga-id-here

# Feature Flags
VITE_ENABLE_DEMO_MODE=true
VITE_ENABLE_BLOCKCHAIN_FEATURES=true
VITE_ENABLE_REAL_TIME_UPDATES=true 